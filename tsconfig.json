{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2022",
    "module": "commonjs",
    "lib": [
      "ES2022",
      "DOM",
      "ESNext"
    ],
    "types": [
      "node",
      "mocha"
    ],
    "noImplicitReturns": true,
    "removeComments": true,
    "useUnknownInCatchVariables": false,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}