{
  "name": "todo-app",
  "description": "todo-app",
  "author": "Esdras Amora",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "dev": "tsx --watch src/index.ts",
    "build": "tsup-node src/index.ts --minify --target esnext",
    "start": "node dist/index.js",
    "db:codegen": "prisma generate",
    "migrate:dev": "DATABASE_URL='postgresql://postgres_user:postgres_password@localhost:5432/todo_app_db' prisma migrate dev",
    "migrate:reset": "DATABASE_URL='postgresql://postgres_user:postgres_password@localhost:5432/todo_app_db' prisma migrate reset",
    "migrate:sync": "DATABASE_URL='postgresql://postgres_user:postgres_password@localhost:5432/todo_app_db' prisma db push",
    "lint": "eslint --ext .ts src",
    "test": "jest"
  },
  "dependencies": {
    "@prisma/client": "4.12.0",
    "@trpc/server": "10.18.0",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "csv-parse": "5.3.6",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "helmet": "6.0.1",
    "swagger-ui-express": "4.6.2",
    "trpc-openapi": "1.1.2",
    "yamljs": "0.3.0",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.0",
    "@types/node": "18.15.11",
    "@types/supertest": "2.0.12",
    "@types/swagger-ui-express": "4.1.3",
    "@types/yamljs": "0.2.31",
    "@typescript-eslint/eslint-plugin": "5.57.0",
    "@typescript-eslint/parser": "5.57.0",
    "autocannon": "7.10.0",
    "eslint": "8.37.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.5.0",
    "prettier": "2.8.7",
    "prisma": "4.12.0",
    "supertest": "6.3.3",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "tsup": "6.7.0",
    "tsx": "3.12.6",
    "typescript": "5.0.3"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=7"
  }
}