{
  "name": "@repo/backend",
  "private": true,
  "description": "todo-app",
  "author": "Esdras Amora",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "src/exported-types.ts",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "dev": "tsup-node src/index.ts --watch --format esm --no-splitting --onSuccess 'node --env-file=.env dist/index.js' ",
    "script": "tsx --env-file=.env",
    "build": "tsup-node src/index.ts --format esm --no-splitting --minify",
    "clean": "rm -rf .turbo node_modules dist",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "start": "node --env-file=.env dist/index.js",
    "lint": "eslint src",
    "test:iteractive": "vitest",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "db:create-migration": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:seed": "npm run script -- ./src/scripts/seed",
    "potato": "kysely-codegen"
  },
  "dependencies": {
    "@google-cloud/logging-winston": "6.0.0",
    "@repo/db": "workspace:*",
    "@hono/node-server": "1.3.3",
    "@hono/swagger-ui": "0.2.0",
    "@scalar/hono-api-reference": "0.3.0",
    "@trpc/server": "10.44.1",
    "drizzle-orm": "0.29.1",
    "hono": "3.11.7",
    "jsonwebtoken": "9.0.2",
    "kysely": "0.26.3",
    "kysely-postgres-js": "2.0.0",
    "p-defer": "4.0.0",
    "postgres": "3.4.3",
    "superjson": "2.2.1",
    "trpc-openapi": "1.2.0",
    "winston": "3.11.0",
    "zod": "3.22.4"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@repo/eslint-config/base"
    ]
  },
  "prettier": "@repo/prettier-config"
}
