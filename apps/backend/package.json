{
  "name": "@project/backend",
  "description": "todo-app",
  "author": "Esdras Amora",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "dev": "tsup-node src/index.ts --watch --format esm --no-splitting --onSuccess 'node --env-file=.env dist/index.js' ",
    "script": "tsx --env-file=.env",
    "seed": "npm run script -- ./src/scripts/seed",
    "build": "tsup-node src/index.ts --format esm --no-splitting --minify",
    "start": "node --env-file=.env dist/index.js",
    "db:create-migration": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "lint": "eslint src",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@google-cloud/logging-winston": "6.0.0",
    "@hono/node-server": "1.3.1",
    "@hono/swagger-ui": "0.2.0",
    "@scalar/hono-api-reference": "0.2.7",
    "@trpc/server": "10.44.1",
    "drizzle-orm": "0.29.1",
    "hono": "3.11.4",
    "jsonwebtoken": "9.0.2",
    "p-defer": "4.0.0",
    "postgres": "3.4.3",
    "trpc-openapi": "1.2.0",
    "winston": "3.11.0",
    "zod": "3.22.4"
  },
  "devDependencies": {},
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.11.0+sha256.5858806c3b292cbec89b5533662168a957358e2bbd86431516d441dc1aface89"
}
